package logic;

public class Logic {

	private Car[] carList;
	private Buffer buffer;
	private Parser parser;

	public Logic(Parser p) {
		parser = p;
		carList = new Car[parser.getNCars()];
		buffer = new Buffer(p);
		for (int i = 0; i < parser.getNCars(); i++) {
			carList[i] = new Car(p, buffer);
		}

	}

	public void supply() {
		while (buffer.isAnyOrder()) {
			for (int i = 0; i < parser.getNCars(); i++) {
				carList[i].start();
			}
		}
	}

}
